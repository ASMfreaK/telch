    <!-- {{ task }} -->

    {% set priority_icon = "fa-tasks" %}
    {% if task.priority == "H" %}
      {% set priority_icon = "fa-angle-double-up" %}
    {% elif task.priority == "M" %}
      {% set priority_icon = "fa-angle-up" %}
    {% elif task.priority == "L" %}
      {% set priority_icon = "fa-angle-down" %}
    {% endif %}

    <div class="list-view-pf-main-info">
      <div class="list-view-pf-left">
        <span class="fa {{ priority_icon }} list-view-pf-icon-sm"></span>
      </div>
      <div class="list-view-pf-body">
        <div class="list-view-pf-description">
          <div class="list-group-item-heading">
            {{ task.project if task.project|e }}
          </div>
          <div class="list-group-item-text">
            {{ task.description|e }}
          </div>
        </div>
        <div class="list-view-pf-additional-info">
          <div class="list-view-pf-additional-info-item">
            {%- if task.githuburl %}
              {%- if task.githubtype == "pull_request" %}
                {%- set github_type = "PR #" %}
              {%- else %}
                {%- set github_type = "issue #" %}
              {%- endif %}
              <span class="fa fa-github list-view-pf-icon-sm"></span>
              <a href="{{ task.githuburl }}" target='_blank'>{{task.githubrepo}} {{github_type}}{{task.githubnumber}}</a>
            {%- endif %}

            {%- if task.jiraurl %}
              <span class="fa fa-bug list-view-pf-icon-sm"></span>
              <a href="{{ task.jiraurl }}" target='_blank'>{{task.jiraid}}</a>
            {%- endif %}
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="list-group-item-container container-fluid hidden">
    <div class="close">
      <span class="pficon pficon-close"></span>
    </div>
    <div class="row">
      <div class="col-md-4">
        <dl class="dl-horizontal">
          <dt>Description</dt>
          <dd>{{ task.description }}</dd>
          <dt>Project</dt>
          <dd>{{ task.project if task.project }}</dd>
          <dt>Status</dt>
          <dd>{{ task.status }}</dd>
          {% if task.tags %}
          <dt>Tags</dt>
          <dd>{{ task.tags|join(', ') }}</dd>
          {% endif %}
          <dt>Urgency</dt>
          <dd>{{ task.urgency }}</dd>
          {% if task.due %}
          <dt>Due</dt>
          <dd>{{ task.due }}</dd>
          {% endif %}

          {% if task.entered %}
          <dt>Entered</dt>
          <dd>{{ task.entered }}</dd>
          {% endif %}

          {% if task.wait %}
          <dt>Wait</dt>
          <dd>{{ task.wait }}</dd>
          {% endif %}

          {% if task.scheduled %}
          <dt>Scheduled</dt>
          <dd>{{ task.scheduled }}</dd>
          {% endif %}

          <dt>Modified</dt>
          <dd>{{ task.modified }}</dd>
        </dl>
        
      </div>
      <div class="col-md-6">
        <dl class="dl-horizontal">
        {% for annotation in task.annotations %}
          <dd>{{ annotation|urlize(40, target='_blank') }}</dd>
        {% endfor %}
        </dl>
      </div>
    </div>
    <div class="row">
      <div class="col-md-10">
        {% if task.jiradescription %}
          {% set title,description = task.jirasummary,task.jiradescription %}
        {% elif task.githubbody %}
          {% set title,description = task.githubtitle,task.githubbody %}
        {% endif %}
        <strong>{{title}}</strong><br/>
        <pre class="invisible-pre">{{description|truncate(killwords=True)|e }}</pre>
      </div>
    </div>
  </div>
</div>
